<%= form_for @post do |f| %>

<% if flash[:post_errors] %>
    <% flash[:post_errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
    <% end %>



<%= f.label :title %>
<%= f.text_field :title %>

<br>

<%= f.label :content %>
<%= f.text_field :content %>

<br>

<%= f.label :blogger_id%>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name, prompt: true%>

<br>

<%= f.label :destination_id %>
<%= f.collection_select :destination_id, Destination.all, :id, :name, prompt: true %>




<%= f.submit %> 

<% end %>

